<Window 
    x:Class="WpfApp2.View.JoystickView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"   
        mc:Ignorable="d"
        Title="JoystickView" Height="350" Width="538.667">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="190*"/>
            <RowDefinition Height="131*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name ="airspeed" IsReadOnly="True" TextAlignment="Center"  FontFamily="Agency FB" FontSize="25" Margin="300,9,47,112" TextWrapping="Wrap" Text="{Binding VM_airspeed}" Background="{x:Null}" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name ="altimeter" IsReadOnly="True" TextAlignment="Center"  FontFamily="Agency FB" FontSize="25" Margin="300,67,47,54" TextWrapping="Wrap" Text="{Binding VM_altimeter}" Background="{x:Null}" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name ="roll" IsReadOnly="True" TextAlignment="Center"  FontFamily="Agency FB" FontSize="25" Margin="305,62,42,59" TextWrapping="Wrap" Text="{Binding VM_roll}" Background="Red" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name ="yaw" IsReadOnly="True" TextAlignment="Center"  FontFamily="Agency FB" FontSize="25" Margin="115,0,232,121" TextWrapping="Wrap" Text="{Binding VM_yaw}" Background="{x:Null}" BorderBrush="{x:Null}" IsEnabled="False"/>
        <TextBox x:Name ="pitch" IsReadOnly="True" TextAlignment="Center"  FontFamily="Agency FB" FontSize="25" Margin="337,136,10,115.667" TextWrapping="Wrap" Text="{Binding VM_pitch}" Background="{x:Null}" BorderBrush="{x:Null}" IsEnabled="False" Grid.RowSpan="2"/>
        <TextBox x:Name ="heading" IsReadOnly="True" TextAlignment="Center"  FontFamily="Agency FB" FontSize="25" Margin="305,13,42,48.667" TextWrapping="Wrap" Text="{Binding VM_heading}" Background="{x:Null}" BorderBrush="{x:Null}" IsEnabled="False" Grid.Row="1"/>

        <Canvas Margin="80,67,128.333,46.667" Grid.RowSpan="2">
            <Image x:Name="joyStick" Source="C:\Users\tallor\Downloads\joystick.png" Height="200" VerticalAlignment="Top" Width="200" Canvas.Left="-2"/>
            <Ellipse x:Name="centerJoystick" Fill="Red" Height="40" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Right" Width="40" Canvas.Top="{Binding VM_elevator}" Canvas.Left="{Binding VM_aileron}" RenderTransformOrigin="-4.222,2.056" Margin="0"/>


        </Canvas>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="32" Stroke="Black" VerticalAlignment="Top" Width="19" RenderTransformOrigin="0.5,0.5" Margin="104,-100,0,0">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.735"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Canvas Margin="56,82,51.333,18.667" Grid.Row="1">
            <Rectangle Fill="Blue" HorizontalAlignment="Left" Height="24" Stroke="Black" VerticalAlignment="Top" Width="236" Canvas.Top="2"/>
            <Rectangle Fill="Black" HorizontalAlignment="Left" Height="30" Stroke="Black" VerticalAlignment="Top" Width="20" Canvas.Left="{Binding VM_rudder}"/>
        </Canvas>
        <Canvas Margin="24,20,289.333,59.667" Grid.RowSpan="2">
            <Rectangle Fill="Gray" HorizontalAlignment="Right" Stroke="Black" Width="24" Height="236" Canvas.Left="3" Canvas.Top="5"/>
            <Rectangle Fill="Black" HorizontalAlignment="Right" Height="20" Stroke="Black" VerticalAlignment="Top" Width="30" Canvas.Top="{Binding VM_throttle}"/>



        </Canvas>


    </Grid>
</Window>

<Window x:Class="AdvancedCoding2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedCoding2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Button x:Name="pause_button1" HorizontalAlignment="Left" Margin="195,138,0,0" VerticalAlignment="Top" Width="83" Click="Pause_Button_Click" Height="86">
            <Image x:Name="pause_button" Source="C:\Users\snira\RiderProjects\Advanced Programming 2\Advanced Programming 2\buttons\pause.jpg" RenderTransformOrigin="0.5,0.5" ForceCursor="True" Height="66" Width="73"/>
        </Button>
        <Button x:Name="play_button1" HorizontalAlignment="Right" Margin="0,138,435.333,0" VerticalAlignment="Top" Width="75" Click="Play_Button_Click">
            <Image x:Name="play_button" Source="C:\Users\snira\RiderProjects\Advanced Programming 2\Advanced Programming 2\buttons\play.jpg" Height="82" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
        </Button>
        <Button x:Name="for_button1" HorizontalAlignment="Right" Margin="0,138,303.333,0" VerticalAlignment="Top" Width="127" Click="Forw_Button_Click" Height="86">
            <Image x:Name="for_button" Source="C:\Users\snira\RiderProjects\Advanced Programming 2\Advanced Programming 2\buttons\for.jpg" Width="117" Height="59">
            </Image>
        </Button>
        <Button x:Name="prev_button1" HorizontalAlignment="Right" Margin="0,139,603.333,0" VerticalAlignment="Top" Width="127" Click="Prev_Button_Click" Height="86">
            <Image x:Name="prev_button" Source="C:\Users\snira\RiderProjects\Advanced Programming 2\Advanced Programming 2\buttons\prev.jpg" Width="110" Height="59">
            </Image>
        </Button>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="514,169,0,0" TextWrapping="Wrap" Text="Play Speed" FontSize="20" VerticalAlignment="Top" Width="114"/>
        <TextBox x:Name="play_speed_box" HorizontalAlignment="Left" Height="30" Margin="649,169,0,0" TextWrapping="Wrap" Text="{Binding VM_playSpeed}" VerticalAlignment="Top" Width="47" IsEnabled="False" >
        </TextBox>
        <TextBox x:Name ="current_time_box"  HorizontalAlignment="Center" Height="30" Margin="514,219,97.333,0" TextWrapping="Wrap" Text="{Binding VM_Time}" VerticalAlignment="Center" Width="182"/>
        <Slider x:Name="time_slider"  Value="{Binding VM_lineNumber, Mode=TwoWay}" Maximum="{Binding VM_simLen}" TickFrequency="1" HorizontalAlignment="Left" Margin="63,272,0,0" VerticalAlignment="Top" Height="27" Width="633" Cursor="Arrow" ValueChanged="time_slider_ValueChanged">
            
        </Slider>
    </Grid>

</Window>
